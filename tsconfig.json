{
    "include": [
        "./packages/**/*",
        "./index.d.ts"
    ],
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "baseUrl": "./packages",
        "paths": {
            "HostConfig": [
                "./react-dom/src/HostConfig"
            ],
        }
    }
}