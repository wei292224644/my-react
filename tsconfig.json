{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "bundler",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedParameters": true,
        "baseUrl": "./packages",
        "paths": {
            "HostConfig": [
                "./react-dom/src/HostConfig"
            ],
        }
    }
}